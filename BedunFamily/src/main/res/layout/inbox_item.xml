<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/bottomborder">

        <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_toRightOf="@+id/inbox_line1"
            android:text=""
            android:textColor="@color/TitleColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inbox_line2"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignLeft="@+id/inbox_line1"
            android:layout_below="@+id/inbox_line1"
            android:textColor="@color/TitleColor"
            android:textStyle="italic"
            />

    <TextView
            android:id="@+id/inbox_line1"
        android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/profile_image"
            android:textColor="@color/TitleColor"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/afghan_flag"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="@color/toolbarColor"
        android:layout_alignBottom="@+id/inbox_line2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/_1ssp"
        android:layout_below="@+id/profile_image"
        android:layout_alignLeft="@+id/inbox_line2"
        android:layout_alignStart="@+id/inbox_line2"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_marginStart="@dimen/_110sdp" />

</RelativeLayout>



