<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context="com.gb.bedunfamily.LanguageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language_title"
        android:textSize="@dimen/_28ssp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:id="@+id/lang_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/main_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lang_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_55sdp"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="true"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="#ffffff"
        aigestudio:wheel_item_text_size="24sp"
        aigestudio:wheel_selected_item_text_color="@color/colorAccent" />

    </RelativeLayout>
        <Button
            android:id="@+id/langbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_blue_dark"
            android:onClick="sendMessage"
            android:text="@string/action_sign_in"
            android:textColor="@color/TitleColor" />



    </RelativeLayout>
