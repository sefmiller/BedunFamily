<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#50D3D3D3"
    android:id="@+id/dialog_frame"
    >

    <TextView
        android:id="@+id/dialog_progress"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_65sdp"
        android:background="@drawable/dialogborder"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/upload"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/_20ssp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <ProgressBar
        android:id="@+id/upload_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:layout_below="@+id/dialog_progress"
         />

    <Button
        android:id="@+id/proceed_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proceed"
        android:visibility="invisible"
        android:layout_margin="@dimen/_5sdp"
        android:textColor="@color/TitleColor"
        android:background="@drawable/button"
        android:layout_below="@+id/upload_bar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>



