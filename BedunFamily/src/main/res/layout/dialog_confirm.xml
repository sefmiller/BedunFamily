<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#50D3D3D3"
    android:paddingBottom="@dimen/_15sdp"
    android:id="@+id/dialog_frame"
    >

    <TextView
        android:id="@+id/dialog_alert_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:textAlignment="center"
        android:text=""
        android:textColor="@color/TitleColor"
        android:textSize="@dimen/_16ssp"
        android:layout_below="@+id/dialog_alert_text_title"
         />

    <TextView
        android:id="@+id/dialog_alert_text_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_65sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialogborder"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/upload"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dialog_alert_text"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/button"
        android:text="@string/no"
        android:textColor="@color/TitleColor" />

    <Button
        android:id="@+id/yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/no_button"
        android:layout_alignBottom="@+id/no_button"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:background="@drawable/button"
        android:text="@string/yes"
        android:textColor="@color/TitleColor" />


</RelativeLayout>



